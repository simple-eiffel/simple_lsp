{
  "name": "eiffel-lsp",
  "displayName": "Eiffel Language Support",
  "description": "Eiffel language support via simple_lsp - Go to Definition, Hover, Completion, Build",
  "version": "0.6.0",
  "publisher": "simple-eiffel",
  "repository": {
    "type": "git",
    "url": "https://github.com/simple-eiffel/simple_lsp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:eiffel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "eiffel.melt",
        "title": "Eiffel: Melt (Quick Compile)"
      },
      {
        "command": "eiffel.freeze",
        "title": "Eiffel: Freeze (Full Workbench)"
      },
      {
        "command": "eiffel.finalize",
        "title": "Eiffel: Finalize (Release Build)"
      },
      {
        "command": "eiffel.compileTests",
        "title": "Eiffel: Compile Tests"
      },
      {
        "command": "eiffel.runTests",
        "title": "Eiffel: Run Tests"
      },
      {
        "command": "eiffel.clean",
        "title": "Eiffel: Clean (Delete EIFGENs)"
      }
    ],
    "keybindings": [
      {
        "command": "eiffel.melt",
        "key": "ctrl+shift+b",
        "when": "editorLangId == eiffel"
      },
      {
        "command": "eiffel.freeze",
        "key": "ctrl+shift+f",
        "when": "editorLangId == eiffel"
      },
      {
        "command": "eiffel.finalize",
        "key": "ctrl+shift+r",
        "when": "editorLangId == eiffel"
      }
    ],
    "taskDefinitions": [
      {
        "type": "eiffel",
        "required": ["task"],
        "properties": {
          "task": {
            "type": "string",
            "enum": ["melt", "freeze", "finalize", "compile-tests", "run-tests", "clean"],
            "description": "The Eiffel task type"
          },
          "ecfFile": {
            "type": "string",
            "description": "Path to .ecf file (optional, auto-detected)"
          },
          "target": {
            "type": "string",
            "description": "Target name (optional)"
          }
        }
      }
    ],
    "languages": [
      {
        "id": "eiffel",
        "aliases": ["Eiffel", "eiffel"],
        "extensions": [".e", ".ecf"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "eiffel",
        "scopeName": "source.eiffel",
        "path": "./syntaxes/eiffel.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Eiffel LSP",
      "properties": {
        "eiffel.lsp.serverPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to simple_lsp executable. Supports environment variables: `$SIMPLE_LSP`, `${VAR}`, `%VAR%`. If empty, searches: 1) `$SIMPLE_LSP` env var, 2) bundled with extension, 3) workspace `.eiffel_lsp/` folder, 4) system PATH, 5) common install locations."
        },
        "eiffel.lsp.logLevel": {
          "type": "string",
          "enum": ["error", "warning", "info", "debug"],
          "default": "info",
          "description": "Log level for LSP server"
        },
        "eiffel.lsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Trace communication between VS Code and the LSP server"
        },
        "eiffel.compilerPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to EiffelStudio ec.exe compiler. If empty, uses: 1) `ISE_EIFFEL` env var, 2) common installation paths."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  }
}
