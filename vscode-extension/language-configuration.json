{
  "comments": {
    "lineComment": "--",
    "blockComment": ["--[[", "]]--"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(class|feature|do|then|else|loop|from|if|inspect|when|deferred|local|require|ensure|invariant|variant|rescue|debug|once|across)\\b",
    "decreaseIndentPattern": "^\\s*(end|else|elseif|when|ensure|invariant|rescue)\\b"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
